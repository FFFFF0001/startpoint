<?xml version="1.0"?>
<project name="MsgExt" default="dist" basedir=".">
	<property name="MsgExt-src" location="${MsgExt.dir}/src" />
	<property name="MsgExt-build" location="${MsgExt.dir}/build" />
	<property name="MsgExt-dist" location="${MsgExt.dir}/dist" />
	<path id="libs">
		<fileset dir="lib">
			<include name="**/*.jar" />
		</fileset>
	</path>
	<target name="init">
		<mkdir dir="${MsgExt-build}" />
	</target>
	<target name="compileMsgExt" depends="init">
		<javac destdir="${MsgExt-build}" debug="true" source="1.8" target="1.8" encoding="UTF-8" includeantruntime="on">
			<classpath>
				<path refid="libs" />
			</classpath>
			<src path="${MsgExt-src}" />
		</javac>
	</target>
	<target name="distMsgExt" depends="compileMsgExt">
		<mkdir dir="${MsgExt-dist}" />
		<jar destfile="${MsgExt-dist}/ThreeCSSIdentityMsg.jar">
			<fileset dir="${MsgExt-build}">
				<include name="**/**" />
			</fileset>
		</jar>
	</target>
	<target name="dist" depends="clean, distMsgExt" />
	<target name="clean" description="clean up">
		<delete dir="${MsgExt-build}" />
		<delete dir="${MsgExt-dist}" />
	</target>
</project>